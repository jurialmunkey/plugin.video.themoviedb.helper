{
    "name"              : "HBOMax",
    "plugin"            : "slyguy.hbo.max",
    "priority"          : 100,
    "provider"          : "HBOMax",
    "is_resolvable"     : "true",
    "make_playlist"     : "true",
    "assert"            : {
                            "play_movie":       ["title", "year"],
                            "play_episode":     ["showname", "season", "episode"],
                            "search_movie":     ["title"],
                            "search_episode":   ["showname"]
                          },
    "play_movie"        : [
                            "plugin://plugin.video.hbo.max/?_=search&query={title_url}",
                            {"label": "(?i).*{title}.*"}
                          ],
    "play_episode"      : [
                            "plugin://plugin.video.hbo.max/?_=search&query={showname_url}",
                            {"label": "(?i).*{showname}.*"},
                            {"season": "{season}"},
                            {"season": "{season}", "episode": "{episode}"}
                          ],
    "search_movie"      : [
                            "plugin://plugin.video.hbo.max/?_=search&query={title_url}",
                            {"label": "(?i).*{title}.*"}
                          ],
    "search_episode"    : [
                            "plugin://plugin.video.hbo.max/?_=search&query={showname_url}",
                            {"label": "(?i).*{showname}.*"},
                            {"season": "{season}"}
                          ]
    }
